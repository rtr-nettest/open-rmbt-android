<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relativeLayoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/speed_chart_height"
        android:padding="@dimen/padding_small">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textChartType"
            style="@style/RobotoMediumStyle.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium_large"
            android:textColor="@color/text_dark_gray"
            tools:text="Download" />


        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progressLoadItems"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorAccent" />

    </RelativeLayout>
</layout>