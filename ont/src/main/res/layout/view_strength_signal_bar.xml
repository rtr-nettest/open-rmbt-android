<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/strength_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_signal_strength"
            android:textColor="@color/text_white_transparency_40"
            android:textSize="@dimen/signal_bar_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/strength_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/signal_bar_value" />

        <at.rtr.rmbt.android.ui.view.curve.StrengthSignalBar
            android:id="@+id/strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
